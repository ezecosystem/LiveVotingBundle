<!DOCTYPE html>
<html>
<head>
    <title>{% block title %}Admin panel{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="{{ asset('bundles/livevoting/css/bootstrap.min.css')}}">
    <link rel="stylesheet" href="{{ asset('bundles/livevoting/css/font-awesome.min.css') }}">
    <link rel="stylesheet" href="{{ asset('bundles/livevoting/css/font-face.css') }}">
    <link rel="stylesheet" href="{{ asset('bundles/livevoting/css/global.css') }}">
    <link rel="stylesheet" href="{{ asset('bundles/livevoting/css/admin.css') }}">
    <link rel="stylesheet" href="{{ asset('bundles/livevoting/css/footer.css') }}">
    <link rel="stylesheet" href="{{ asset('bundles/livevoting/css/content.css') }}">
    <link rel="stylesheet" href="{{ asset('bundles/livevoting/css/transitions.css') }}">
</head>

<body>
    <div id="admin-container">
    	{% if app.user %}
        <div class="container">
            <div class="row">
                <div id="admin-header" class="col-xs-12">
                    <a href="{{ path('admin_index')}}">
                        <img src="{{ asset('bundles/livevoting/img/assets/small-logo.svg')}}" class="navbar-logo">
                    </a>
                </div>
            </div>
            <nav id="admin-navigation" class="row">
		        <div class="col-xs-9 text-left">
		            <a href="{{ path('admin_event') }}">Events</a> - <a href="{{ path('admin_user') }}">Users</a> - <a href="{{ path('registration') }}">Registrations</a>
		        </div>
                <div class="col-xs-3 text-right">
                    <a href="{{ path('admin_logout') }}">Logout</a>
                </div>
    		</nav>
        </div>
        {% endif %}

        <div id="main" class="container">
        	<div class="row admin-heading">
        		<div class="col-xs-12">
        			<h1>{% block mainHeading %}{% endblock %}</h1>
        		</div>
        	</div>
            {% block body %}{% endblock %}
        </div>

        <div id="admin-footer">
            <div class="row">
                <footer class="container">
                    <div class="col-xs-12 text-center">
                        <a href="http://www.netgenlabs.com" target="_blank">netgenlabs.com</a> - <a href="https://github.com/netgen/LiveVoting" target="_blank">github.com</a>
                    </div>
                </footer>
            </div>
        </div>
    </div>
    
    <script src="{{ asset('bundles/livevoting/js/jquery-2.1.1.js') }}"></script>
    <script src="{{ asset('bundles/livevoting/js/bootstrap.min.js') }}"></script>
    {% block javascripts %}{% endblock %}
</body>
</html>
