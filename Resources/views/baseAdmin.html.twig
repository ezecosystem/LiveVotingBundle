<!DOCTYPE html>
<html>
<head>
    <title>{% block title %}LiveVoting app{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="{{ asset('bundles/livevoting/css/bootstrap.min.css')}}">
    <link rel="stylesheet" href="{{ asset('bundles/livevoting/css/font-awesome.min.css') }}">
    <link rel="stylesheet" href="{{ asset('bundles/livevoting/css/font-face.css') }}">
    <link rel="stylesheet" href="{{ asset('bundles/livevoting/css/global.css') }}">
    <link rel="stylesheet" href="{{ asset('bundles/livevoting/css/admin.css') }}">
    <link rel="stylesheet" href="{{ asset('bundles/livevoting/css/footer.css') }}">
    <link rel="stylesheet" href="{{ asset('bundles/livevoting/css/content.css') }}">
    <link rel="stylesheet" href="{{ asset('bundles/livevoting/css/transitions.css') }}">
</head>

<body>
    <div id="admin-container">
    	{% if app.user %}
        <div class="container">
            <div class="row">
                <div id="admin-header" class="col-xs-12">
                    <div class="pull-left">
                        <a href="{{ path('root')}}">
                            <img src="{{ asset('bundles/livevoting/img/netgen.svg') }}" class="hidden-xs navbar-logo">
                            <img src="{{ asset('bundles/livevoting/img/kruzici.svg')}}" class="visible-xs navbar-logo">
                        </a>
                    </div>
                    <div class="pull-right">
                        <a href="{{ path('admin_logout') }}"><button type="button" class="btn">Logout</button></a>
                    </div>
                </div>
            </div>
            <nav id="admin-navigation" class="row">
		        <div class="col-xs-12 text-center">
		            <a href="event">Events</a> - <a href="user">Users</a> - <a href="registration">Registrations</a>
		        </div>
    		</nav>
        </div>
        {% endif %}

        <div id="main" class="container">
        	<div class="row">
        		<div class="col-xs-12">
        			{% block mainHeading %}{% endblock %}
        		</div>
        	</div>
            {% block body %}{% endblock %}
        </div>

        <div class="footer-wrapper">
            <footer id="main-footer" class="container">
                <div class="row">
                    <div class="col-xs-12 col-sm-6 col-md-4 col-md-offset-2 col-lg-3 col-lg-offset-3">
                        <a href="http://www.netgenlabs.com" target="_blank" class="text-center"><img width="32" height="32" alt="Netgen" src="{{ asset('bundles/livevoting/img/kruzici.svg')}}"><span>netgenlabs.com</span></a>
                    </div>
                    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
                        <a href="https://github.com/netgen/LiveVoting" target="_blank" class="text-center"><i class="fa fa-2x fa-github"></i><span>GitHub project</span></a>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    
    <script src="{{ asset('bundles/livevoting/js/jquery-2.1.1.js') }}"></script>
    <script src="{{ asset('bundles/livevoting/js/bootstrap.min.js') }}"></script>
    {% block javascripts %}{% endblock %}
</body>
</html>
