<!DOCTYPE html>
<html lang="en">
	<head>
		<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1">

   		<!-- CSS -->
		<link rel="stylesheet" href="{{ asset('bundles/livevoting/css/bootstrap.css') }}">
		<link rel="stylesheet" href="{{ asset('bundles/livevoting/css/bootstrap-theme.css') }}">
		<link rel="stylesheet" href="{{ asset('bundles/livevoting/css/style.css') }}">

	    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>

	<title>Draw pool</title>

	</head>

	<body>
		<div class="navbar navbar-default navbar-collapse">
		    <div class="container">
		        <div class="navbar-header">         
	            	<ul class="list-inline list-unstyled text-center">
	                    <li>
	                        <a href="{{ path('root') }}">
	                          <img width="25" height="25" src="{{ asset('bundles/livevoting/img/kruzici.svg') }}" class="img-responsive" alt="logo">
	                        </a>
	                    </li>
	                    <li class="text-center">
	                        <h2>Netgen LiveVoting prize draw</h2>
	                    </li>
	                </ul>
	            </div>
            </div>
        </div>

        <div class="container">
        	<div id="prize-pool">
				<ul class="list-group">
					<script type="text/javascript"> var size = 0; var voteEmails = [];</script>
					{% for voteEmail in votePool %}
						<script> size++; voteEmails.push('{{voteEmail}}');</script>
						<li id="lista" class="list-group-item"> {{ voteEmail }} </li>
					{% endfor %}
				</ul>

				<button id="start" class="btn btn-success"> Draw </button>

				<h2 id="pobjednik"></h2>
				<script type="text/javascript">
					var rand = Math.floor((Math.random() * size + 1)); 

					$('#start').click(function (){
						document.getElementById('pobjednik').innerHTML = 'Lucky winner is: ' + voteEmails[rand-1];
						rand = Math.floor((Math.random() * size + 1)); 
					});
				</script>
				</h2>
				<div id="counter"></div>
			</div>
		</div>
	</body>
</html>
