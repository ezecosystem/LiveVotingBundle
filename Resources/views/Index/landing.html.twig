{% extends 'LiveVotingBundle::base.html.twig' %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('bundles/livevoting/css/loader.css') }}"  />
{% endblock %}

{% block body %}
	<div class="col-xs-12 box"><!-- START BOX CONTAINER -->
		<div class="row vertical-align-xs">
			<div class="col-xs-4 col-sm-1 image">
				<img src="{{asset('bundles/livevoting/img/assets/slave-event.svg')}}">
			</div>
			<div class="col-xs-8 col-sm-7 text-wrapper">
				<div class="heading">
					<h1>Box container with h1 heading</h1>
				</div>
				<div class="label">
					<label>Box with label, image and actions</label>
				</div>
			</div>
			<div class="clearfix visible-xs"></div>
			<div class="col-xs-12 col-sm-4">
				<div class="text-right actions">
					<a href="#" class="text-center"><i class="fa fa-bar-chart"></i><span>Action</span></a><!--
					--><a href="#" class="text-center"><i class="fa fa-bar-chart"></i><span>Action</span></a><!--
					--><a href="#" class="text-center"><i class="fa fa-bar-chart"></i><span>Action</span></a>
				</div>
			</div>
		</div>
	</div>
	<div class="col-xs-12 box"><!-- START BOX CONTAINER -->
		<div class="row vertical-align-xs">
			<div class="col-xs-4 col-sm-1 image">
				<img src="{{asset('bundles/livevoting/img/assets/slave-event.svg')}}">
			</div>
			<div class="col-xs-8 col-sm-7 text-wrapper">
				<div class="heading">
					<h1>Box container with h1 heading</h1>
				</div>
				<div class="description hidden-xs">
					<span>Elephant @ 12:30</span>
					<span>Date: 21. July</span>
				</div>
			</div>
			<div class="clearfix visible-xs"></div>
			<div class="col-xs-12 visible-xs xs-description">
				<span>Elephant @ 12:30</span>
				<span>Date: 21. July</span>
			</div>
			<div class="col-xs-12 col-sm-4">
				<div class="text-right actions">
					<a href="#" class="text-center"><i class="fa fa-bar-chart"></i><span>Action</span></a><!--
					--><a href="#" class="text-center"><i class="fa fa-bar-chart"></i><span>Action</span></a><!--
					--><a href="#" class="text-center"><i class="fa fa-bar-chart"></i><span>Action</span></a>
				</div>
			</div>
		</div>
	</div>
	{% for event in events %}
	{% if event.event %}
	<div class="col-xs-12 box">
		<div class="row vertical-align-xs">
			<div class="col-xs-4 col-sm-1 image">
				<img src="{{asset('bundles/livevoting/img/assets/slave-event.svg')}}">
			</div>
			<div class="col-xs-8 col-sm-7 text-wrapper">
				<div class="heading">
					<h2>{{ event.getName }}</h2>
				</div>
				<div class="label">
					<label><a href="#">View event details</a></label>
				</div>
			</div>
			<div class="clearfix visible-xs"></div>
			<div class="col-xs-12 col-sm-4">				
				<div class="text-right actions">
					<a href="{{path( 'event' , {'event_id':event.getId})}}" class="text-center"><i class="fa fa-thumbs-o-up"></i><span>Vote</span></a><!--
					{% if event.getAllowViewingResults %}
					--><a href="{{path('result', {'event_id':event.getId})}}" class="text-center"><i class="fa fa-bar-chart"></i><span>Results</span></a><!--
					{% endif %}
					{% if event.questions|length > 0 %}
					--><a href="{{path('question', {'event_id':event.getId})}}" class="text-center"><i class="fa fa-question"></i><span>{{ event.questions|length }} {{ event.questions|length > 1 ? 'questions' : 'question' }}</span></a><!--
					{% endif %}-->
				</div>				
			</div>
		</div>
	</div>
	{% else %}
	<div class="col-xs-12 box light" style="background-image: url({{asset('bundles/livevoting/img/assets/master-event.png')}});">
		<div class="row vertical-align-xs">
			<div class="col-xs-4 col-sm-1 image garbage">
				<img src="{{asset('bundles/livevoting/img/assets/box-img.svg')}}">
			</div>
			<div class="col-xs-8 col-sm-7 text-wrapper">
				<div class="heading">
					<h1>{{ event.getName }}</h1>
				</div>
				<div class="label">
					<label>{{ event.begin.format('d F') }} - {{ event.end.format('d F') }}</label>
				</div>
			</div>
			<div class="clearfix visible-xs"></div>
			<div class="col-xs-12 col-sm-4">
				{% if event.questions|length > 0 %}
				<div class="text-right actions">
					<a href="{{path('question', {'event_id':event.getId})}}" class="text-center"><i class="fa fa-question"></i><span>{{ event.questions|length }} {{ event.questions|length > 1 ? 'questions' : 'question' }}</span></a>
				</div>
				{% endif %}
			</div>
		</div>
	</div>
	{% endif %}
	{% endfor %}
{% endblock %}

{% block javascripts %}
	<script type="text/javascript" src="{{ asset('bundles/livevoting/js/handlebars-v1.3.0.js') }}"></script>
	<script type="text/javascript" src="{{ asset('bundles/livevoting/js/script.js') }}"></script>
	<script type="text/javascript" src="{{ asset('bundles/livevoting/js/icheck.js') }}"></script>
{% endblock %}
