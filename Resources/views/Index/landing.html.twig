{% extends 'LiveVotingBundle::base.html.twig' %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('bundles/livevoting/css/loader.css') }}"  />
{% endblock %}
{% block body %}
<div class="navbar navbar-default navbar-collapse">
		<div class="container">

				<div class="navbar-header">
						<ul class="list-inline list-unstyled text-center">
									<li>
											<a href="{{ path('root') }}">
												<img width="25" height="25" src="{{ asset('bundles/livevoting/img/kruzici.svg') }}" class="img-responsive" alt="logo">
											</a>
									</li>
									<li class="text-center">
											<h2>Netgen LiveVoting</h2>
									</li>
							</ul>
					</div>
				</div>
</div>
		<div class="container">
			<div id="events">
								<ul class="list-group">
										{% for event in events %}
										<li class="list-group-item clearfix">
											<a href="{{ path( 'event' , {'event_id':event.getId}) }}">
												<img style="float:left;" src="{{ asset('bundles/livevoting/') }}{{ event.getImage ? event.getWebPath : 'img/man1.png' }}" class='thumbnail slikaa'>
											<h3>{{ event.getName }}</h3>
										</a>
												{% if event.getAllowViewingResults %}
														<a href="{{ path('result', {'event_id':event.getId}) }}"><span class="glyphicon glyphicon-stats"></span> Results</a>
												{% endif %}
												{% if event.questions|length > 0 %}
													<br><span class="glyphicon glyphicon-question-sign"></span>
													<a href="{{ path('question', {'event_id':event.getId}) }}">
														{{ event.questions|length }} {{ event.questions|length > 1 ? 'questions' : 'question' }}
													</a>
												{% endif %}
										</li>
										{% endfor %}
								</ul>
						</div>
		</div>

		{% if userPresentationsNum != 0 %}
			<a class="btn btn-primary" href="{{ path('user_presentations') }}">
					Presentations
			</a>
		{% endif %}
		
		{% if(app.request.cookies.has('userEditEnabled')) %}
			<a class="btn btn-primary" href="{{ path('user_edit') }}">
					Edit user info
			</a>
		{% endif %}
{% endblock %}

{% block javascripts %}
	<script type="text/javascript" src="{{ asset('bundles/livevoting/js/handlebars-v1.3.0.js') }}"></script>
	<script type="text/javascript" src="{{ asset('bundles/livevoting/js/script.js') }}"></script>
	<script type="text/javascript" src="{{ asset('bundles/livevoting/js/icheck.js') }}"></script>
{% endblock %}
