{% extends 'LiveVotingBundle::baseAdmin.html.twig' %}

{% block title %}AdminLogin|LiveVoting{% endblock %}

{% block headingSpecialClass %}class="text-center"{% endblock %}
{% block mainHeading %}Netgen LiveVoting{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
          {% if error %}
            <div class="alert alert-danger">
                <div class="text">Wrong entry. Please enter a valid username and password.</div>
            </div>
            {% endif %}
            <div class="form-signin">
                <form action="{{ path('admin_login_check') }}" method="post">
                    <input class="form-control" type="text" id="username" name="_username" placeholder="Username" required>
                    <input class="form-control" type="password" id="password" name="_password" placeholder="Password" required>

                    {#
                        If you want to control the URL the user
                        is redirected to on success (more details below)
                        <input type="hidden" name="_target_path" value="/account" />
                    #}

                    <button class="btn btn-block" type="submit">login</button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
