{% extends 'LiveVotingBundle::base.html.twig' %}

{% block body -%}
    <div class="col-xs-12 box light" style="background-image: url({{asset('bundles/livevoting/img/assets/lectures-bg.png')}});">
        <div class="row vertical-align-xs">
            <div class="col-xs-4 col-sm-1 image">
                <img src="{{asset('bundles/livevoting/img/assets/clipboard.svg')}}">
            </div>
            <div class="col-xs-8 col-sm-6 col-lg-7 text-wrapper">
                <div class="heading">
                    <h2>My lectures</h2>
                </div>
                <div class="label">
                    <label>Edit Your lectures</label>
                </div>
            </div>
            <div class="clearfix visible-xs"></div>
            <div class="col-xs-12 col-sm-5 col-lg-4">
                <div class="text-right actions">
                    <a href="{{ path('user_landing') }}" class="text-center"><i class="fa fa-chevron-circle-left"></i><span class="hidden-sm">Events</span></a>
                </div>
            </div>
        </div>
    </div>

    {% for flashMessage in app.Session.flashbag.get('message') %}
    <h3>{{flashMessage}}</h3>
    {% endfor %}

    {% for entity in entities %}
    <div class="col-xs-12 box">
        <div class="row vertical-align-xs">
            <div class="col-xs-4 col-sm-1 image">
                <img src="{{asset('bundles/livevoting/img/assets/presenter.svg')}}">
            </div>
            <div class="col-xs-8 col-sm-6 col-lg-7 text-wrapper">
                <div class="heading">
                    <h2>{{ entity[0].presentationName }}</h2>
                </div>
                <div class="description hidden-xs">
                    <span>Elephant <i class="fa fa-at"></i> 12:30</span>
                    <span>Date: 21. July</span>
                </div>
            </div>
            <div class="clearfix visible-xs"></div>
            <div class="col-xs-12 visible-xs xs-description">
                <span>Elephant <i class="fa fa-at"></i> 12:30</span>
                <span>Date: 21. July</span>
            </div>
            <div class="col-xs-12 col-sm-5 col-lg-4">
                <div class="text-right actions">
                    <a href="{{ path('user_presentation_edit', { 'id': entity[0].id }) }}" class="text-center"><i class="fa fa-pencil"></i><span>Edit</span></a>
                </div>
            </div>
        </div>
    </div>
    {% endfor %}
{% endblock %}
