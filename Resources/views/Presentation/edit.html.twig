{% extends 'LiveVotingBundle::baseAdmin.html.twig' %}

{% block title %}Edit|Presentation|LiveVoting{% endblock %}
{% block mainHeading %}Edit presentation{% endblock %}

{% block body -%}
    <div class="row">
        <div class="col-xs-12 col-sm-4 col-lg-3">
            {{ form_start(edit_form) }}
            <div class="form-group">
                {{ form_label(edit_form.presentationName) }}
                {{ form_widget(edit_form.presentationName) }}
            </div>
            <div class="form-group">
                {{ form_label(edit_form.presenterName) }}
                {{ form_widget(edit_form.presenterName) }}
            </div>
            <div class="form-group">
                {{ form_label(edit_form.presenterSurname) }}
                {{ form_widget(edit_form.presenterSurname) }}
            </div>
            <div class="form-group">
                {{ form_label(edit_form.image) }}
                {{ form_widget(edit_form.image) }}
            </div>
            {{ form_end(edit_form) }}
        </div>
    </div>

    <div class="row secondary-footer">
        <div class="col-xs-12">
            <a href="{{ path('admin_presentation', {'event_id':event_id} ) }}"><button type="button" class="btn">Back</button></a>
        </div>
    </div>
{% endblock %}
