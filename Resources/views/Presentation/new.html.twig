{% extends 'LiveVotingBundle::baseAdmin.html.twig' %}

{% block title %}New|Presentation|LiveVoting{% endblock %}
{% block mainHeading %}New presentation{% endblock %}

{% block body -%}
    <div class="row">
        <div class="col-xs-12 col-sm-4 margin-top">
            {{ form_start(form) }}
            <div class="form-group">
                {{ form_label(form.presenterName) }}
                {{ form_widget(form.presenterName) }}
            </div>
            <div class="form-group">
                {{ form_label(form.presenterSurname) }}
                {{ form_widget(form.presenterSurname) }}
            </div>
            <div class="form-group">
                {{ form_widget(form.presentationRecord) }}
            </div>
            {{ form_end(form) }}
        </div>
    </div>

    <div class="row secondary-footer">
        <div class="col-xs-12">
            <a href="{{ path('admin_presentation', {'event_id':event_id} ) }}"><button type="button" class="btn">Back</button></a>
        </div>
    </div>
{% endblock %}
