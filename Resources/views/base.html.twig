<!DOCTYPE html>
<html>
<head>
    <title>{% block title %}LiveVoting app{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="{{ asset('bundles/livevoting/css/bootstrap.min.css')}}">
    <!-- <link rel="stylesheet" href="{{ asset('bundles/livevoting/css/style.css') }}"> -->
    <link rel="stylesheet" href="{{ asset('bundles/livevoting/css/font-awesome.min.css') }}">
    <link rel="stylesheet" href="{{ asset('bundles/livevoting/css/global.css') }}">
    <link rel="stylesheet" href="{{ asset('bundles/livevoting/css/header.css') }}">
    <link rel="stylesheet" href="{{ asset('bundles/livevoting/css/footer.css') }}">
    <link rel="stylesheet" href="{{ asset('bundles/livevoting/css/content.css') }}">
    <link rel="stylesheet" href="{{ asset('bundles/livevoting/css/transitions.css') }}">
    <link href='http://fonts.googleapis.com/css?family=Roboto+Slab:700,400&subset=latin,latin-ext' rel='stylesheet' type='text/css'>

</head>

<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-xs-12">
                <nav class="navbar navbar-fixed-top" role="navigation">
                    <div class="navbar-header pull-left">
                        <a href="{{ path('root')}}">
                            <img src="{{ asset('bundles/livevoting/img/netgen.svg') }}" class="navbar-logo">
                        </a>
                    </div>
                    <div class="navbar-header pull-right">
                        {% if app.user %}
                            <a href="{{ path('root') }}"><button type="button" class="btn btn-default navbar-btn">Dashboard</button></a>
                            <a href="{{ path('user_landing') }}"><button type="button" class="btn btn-default navbar-btn">Events</button></a>
                        {% endif %}
                    </div>
                </nav>
            </div>
        </div>
    </div>
    {% block body %}{% endblock %}

    <footer id="main-footer" class="container-fluid">
        <div class="row">
            <div class="col-xs-12">
                <ul class="list-inline list-unstyled text-center">
                    <li>                        
                        <a href="http://www.netgenlabs.com"><img width="32" height="32" alt="Netgen" src="{{ asset('bundles/livevoting/img/kruzici.svg')}}"><span>netgenlabs.com</span></a>
                    </li>
                    <li>                        
                        <a href="https://github.com/netgen/LiveVoting"><i class="fa fa-2x fa-github"></i><span>GitHub project</span></a>
                    </li>
                </ul>
            </div>
        </div>
    </footer>
    
    <script src="{{ asset('bundles/livevoting/js/jquery-2.1.1.js') }}"></script>
    <script src="{{ asset('bundles/livevoting/js/bootstrap.min.js') }}"></script>
    {% block javascripts %}{% endblock %}
</body>
</html>
