{% extends 'LiveVotingBundle::base.html.twig' %}

{% block body -%}
    <h1>Event list</h1>

    <table class="records_list table">
        <thead>
            <tr>
                <th>Name</th>
                <th>State</th>
                <!-- <th>Value</th> -->
                <th>Edit</th>
                <th>View presentations</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.name }}</td>
                <td>{{ entity.stateName }}</td>
                <td>
                    <a class='btn btn-primary' href="{{ path('admin_event_edit', { 'id': entity.id }) }}">Edit</a>
                </td>

                <td>
                    <a class='btn btn-primary' href="{{ path('admin_presentation', { 'event_id': entity.id }) }}">View</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('admin_event_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
