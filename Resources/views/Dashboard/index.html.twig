                  tickPixelInterval: 5,
                  title: {
                      text: 'Presentations name'
                  }
              },
              yAxis: {
                  minPadding: 0.1,
                  maxPadding: 0.1,
                  tickmarkPlacement: 'on',
                  min: 0,
                  max: 5,
                  title: {
                      text: 'Average number of rating score'
                  }
              },
              series: [
                  {
                      showInLegend: false,
                      data:[],
                      dataLabels: {
                          enabled: true,
                          rotation: 0,
                          formatter: function() {
                              return this.y;
