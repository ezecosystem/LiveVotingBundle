        @keyframes fadeIn {
            0% {
                background-color: white;
                opacity: 0;
            }
            50% {
                background-color: green;
                opacity: 0.5;
            }
            100% {
                background-color: white;
                opacity: 1;
            }
        }

        @-webkit-keyframes fadeIn {
            0% {
                background-color: white;
                opacity: 0;
            }
            50% {
                background-color: green;
                opacity: 0.5;
            }
            100% {
                background-color: white;
                opacity: 1;
            }
        }

        @keyframes fadeOut {
            0% {
                background-color: white;
                opacity: 1;
            }
            50% {
